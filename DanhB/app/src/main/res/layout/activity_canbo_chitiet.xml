<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".CanBoChiTiet">

    <!-- Khung tròn chứa toàn bộ nội dung -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hình ảnh đại diện -->
            <ImageView
                android:id="@+id/imv_canbo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/user__1_"
                android:background="@drawable/rounded_image_view"
                android:padding="8dp"
                android:elevation="4dp"
                android:contentDescription="Avatar" />

            <!-- Họ và tên -->
            <TextView
                android:id="@+id/txt_hoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Họ và tên: Nguyễn Văn A"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <!-- Chức vụ -->
            <TextView
                android:id="@+id/txt_chucvu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chức vụ: Trưởng phòng"
                android:textSize="16sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif" />

            <!-- Số điện thoại -->
            <TextView
                android:id="@+id/txt_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Số điện thoại: 0123456789"
                android:textSize="16sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif" />

            <!-- Email -->
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email: example@email.com"
                android:textSize="16sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif" />

            <!-- Đơn vị -->
            <TextView
                android:id="@+id/txt_dvct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Đơn vị: Phòng Công tác sinh viên"
                android:textSize="16sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif" />

            <!-- Nút chức năng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <!-- Nút Sửa -->
                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1976D2"
                    android:textStyle="bold"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp" />

                <!-- Nút Xóa -->
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"
                    android:textStyle="bold"
                    android:paddingVertical="12dp"
                    android:elevation="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
